<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.projectakhirpam"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectAkhirPAM">

        <!-- Login sebagai launcher utama -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Auth -->
        <activity android:name=".RegisterActivity" android:exported="true" />
        <activity android:name=".MainActivity" android:exported="true" />

        <!-- Item dan transaksi -->
        <activity android:name=".AddItemActivity" android:exported="true" />
        <activity android:name=".ManageItemsActivity" android:exported="true" />
        <activity android:name=".AddIncomesActivity" android:exported="false" />
        <activity android:name=".AddExpensesActivity" android:exported="false" />
        <activity android:name=".ManageFinancialsActivity" android:exported="true" />
        <activity android:name=".ManageExpensesActivity" android:exported="true" />

        <!-- StockOut -->
        <activity android:name=".AddStockOutActivity" android:exported="true" />
        <activity android:name=".ManageStockOutActivity" android:exported="true" />

        <!-- Profil -->
        <activity android:name=".ProfileActivity" android:exported="true" />
        <activity android:name=".EditProfileActivity" android:exported="true" />

    </application>
</manifest>
