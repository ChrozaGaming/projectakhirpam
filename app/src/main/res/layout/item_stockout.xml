<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView android:id="@+id/tv_item_name" android:layout_width="130dp" android:layout_height="wrap_content" android:text="Barang A" android:textColor="#333333" android:textSize="16sp" />
        <TextView android:id="@+id/tv_qty" android:layout_width="130dp" android:layout_height="wrap_content" android:gravity="center" android:text="5" android:textColor="#333333" android:textSize="16sp" />
        <TextView android:id="@+id/tv_unit_price" android:layout_width="130dp" android:layout_height="wrap_content" android:gravity="center" android:text="IDR 400000" android:textColor="#333333" android:textSize="16sp" />
        <TextView android:id="@+id/tv_total_price" android:layout_width="130dp" android:layout_height="wrap_content" android:gravity="center" android:text="IDR 2000000" android:textColor="#333333" android:textSize="16sp" />
        <TextView android:id="@+id/tv_destination" android:layout_width="130dp" android:layout_height="wrap_content" android:gravity="center" android:text="PT Cargolog" android:textColor="#333333" android:textSize="16sp" />
        <TextView android:id="@+id/tv_date" android:layout_width="130dp" android:layout_height="wrap_content" android:gravity="center" android:text="15-06-2025" android:textColor="#333333" android:textSize="16sp" />
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />
</LinearLayout>
